{% extends "base.html.twig" %}
{% block title %}Modifier bac{%endblock%}
{% block header %}Modifier bac{%endblock%}
{% block body %}
{% if result != null %}
<div class="alert alert-success">
  {{result}}
</div>
{% endif %}
<form method="POST" action="">
  <div class="form-row">
    <div class="form-group col-md-4">
        <label for="inputLongitude">Adresse</label>
        <input type="text" name="adresse" class="form-control" value="{{bac.adresse}}">
    </div>
    <div class="form-group col-md-4">
        <label for="inputLatitude" >Nature</label>
        <select name="nature" class="form-control" id="">
            <option value="plastique">Plastique</option>
            <option value="métalique">Métalique</option>
            <option value="Galvanisé">Galvanisé</option>
        </select>
      </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="inputLatitude">Nature de déchets:</label>
      <input type="text" name="nature_dechet" class="form-control" value="{{bac.typedechet}} ">
    </div>
    <div class="form-group col-md-4">
        <label for="inputLibelle">Volume</label>
        <input type="number" step="5" class="form-control" name="volume" value="{{bac.volume}}">
      </div>
  </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="inputAddress">Etat:</label>
            <select name="etat" id="" class="form-control">
                <option value="Bon" selected>Bon</option>
                <option value="Moyen" selected>Moyen</option>
                <option value="Dégradé" selected>Dégradé</option>
            </select>
        </div>
        <div class="form-group col-md-8">
            <label for="inputAddress">Date d'installation:</label>
            <input type="date"  class="form-control col-md-6" name="date" value="{{bac.dateinstal}}">
        </div>
    </div>
    
  <button type="submit" class="btn btn-primary">Sauvegarder</button>
</form>

{% endblock %}