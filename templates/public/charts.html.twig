{% extends "base.html.twig" %}
{% block title %}Statistiques{%endblock%}
{% block stylesheets %}
  <link rel="stylesheet" href="{{asset('css/charts.css')}}">
{% endblock %}
{% block header %}Statistiques{%endblock%}
{% block body %}
<div class="container-fluid">
    <div class="row" style=" margin-bottom: 23px;">
        <div class="chart1 ">
            <h3 class="text-center font-weight-bold mb-4">Quantité de déchets par secteur</h3>
            <hr>
            <canvas id="Chart1" height="195" width="390" class="chartjs-render-monitor" style="display: block; width: 390px; height: 195px;"></canvas>
        </div>
        <div class="chart2 " >
            <h3 class="text-center font-weight-bold mb-4">Quantité de déchets par mois</h3>
            <hr>
            <canvas id="Chart2" height="195" width="390" class="chartjs-render-monitor" style="display: block; width: 390px; height: 195px;"></canvas>
        </div>
    </div>
    <div class="row" style=" margin-bottom: 23px;">
        <div class="chart1">
            <h3 class="text-center font-weight-bold mb-4">Distance parcourue par véhicule</h3>
            <hr>
            <canvas id="Chart3" height="195" width="390" class="chartjs-render-monitor" style="display: block; width: 390px; height: 195px;"></canvas>
