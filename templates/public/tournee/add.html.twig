{% extends "base.html.twig" %}

{% block body %}
{% if result != null %}
<div class="alert alert-success">
  {{result}}
</div>
{% endif %}
<form method="POST" action="{{path('addTournee')}}">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCode">Date:</label>
      <input type="date" class="form-control" name="date">
    </div>
    <div class="form-group col-md-6">
      <label for="inputLibelle">Secteur:</label>
      <input type="text" class="form-control" name="secteur">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
        <label for="inputLatitude">v√©hicule</label>
        <input type="text" name="vehicle" class="form-control" >
      </div>
    <div class="form-group col-md-4">
        <label for="inputLatitude">CET</label>
        <select name="cet" id="cet" class="form-control">
            <option value="">CET CORSO</option>
            <option value="">CET HAMICI</option>
        </select>
    </div>
    <div class="form-group col-md-4">
      <label for="inputLongitude">Equipe</label>
      <select name="equipe" id="equpe" class="form-control">
          <option value="1">1</option>
      </select>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Ajouter</button>
</form>

{% endblock %}