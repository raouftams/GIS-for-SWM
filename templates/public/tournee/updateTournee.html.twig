{% extends "userbase.html.twig" %}
{% block title %}Mise à jour des données {%endblock%}
{% block stylesheets %}
<style>
    .btn-primary{
        background-color: #1d8097 !important;
    }
</style>
{% endblock %}

{% block body %}
{% if result != null %}
    <div class="alert alert-success">
        {{result}}
    </div>
{% endif %}
{% if erreur != null %}
    <div class="alert alert-danger">
        {{erreur}}
    </div>
{% endif %}
<form class="form" method="POST" enctype="multipart/form-data">
    <div id="tournee-form">
        <h3 class="font-weight-bold" style="color:  #1d8097;">Rotation réalisée:</h3>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="heuredemarrage">Heure démarrage du parc:</label>
                <input type="time" name="heure_demarrage_parc" id="heure_demarrage_parc" class="form-control" value="{{tournee.heure_demarrage_parc}}">
            </div>
            <div class="form-group col-md-6">
                <label for="heuredebut">Heure début secteur:</label>
                <input type="time" name="heure_debut_secteur" id="heure_debut_secteur" class="form-control" value="{{tournee.heure_debut_secteur}}">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="heurefin">Heure fin secteur:</label>
                <input type="time" name="heure_fin_secteur" id="heure_fin_secteur" class="form-control" value="{{tournee.heure_fin_secteur}}">
            </div>
            <div class="form-group col-md-6">
                <label for="dureeattente">Durée d'attente: <em>(en minutes)</em></label>
                <input type="number" step="1" name="duree_attente" id="duree_attente" class="form-control" value="{{tournee.duree_attente}}">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="tempstravail">Heure fin rotation</label>
                <input type="time" name="heure_fin_rotation" id="heure_fin_rotation" class="form-control" value="{{tournee.heure_fin_rotation}}">
            </div>
            <div class="form-group col-md-6">
                <label for="qterealise">Quantité réalisée: <em>(en T)</em></label>
                <input type="number" step="0.01" name="qte_realise" id="qte_realise" class="form-control" value="{{tournee.qte_realise}}">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Kilometrage">Kilometrage: </label>
                <input type="number" step="0.1" name="kilometrage" id="kilometrage" class="form-control" value="{{tournee.kilometrage}}">
            </div>
            <div class="form-group col-md-6">
                <label for="Carburant">Carburant <em>(litre)</em></label>
                <input type="number" step="0.1" name="carburant" id="carburant" class="form-control" value="{{tournee.carburant}}">
            </div>
        </div>

    </div>

    <hr>
    <div id="form-ticket">
        <h3 class="font-weight-bold" style="color:  #1d8097;">Ticket de pesée</h3>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="heurepesee">Heure de pesée:</label>
                <input type="time" name="heure_pesee" id="heure_pesee" class="form-control" value="{{ticket.heure_pesee}}">
            </div>
            <div class="form-group col-md-6">
                <label for="heurepesee">Date de pesée:</label>
                <input type="date" name="date_pesee" id="date_pesee" class="form-control" value="{{ticket.date_pesee}}">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="heurepesee">Poids brut <em>(en T)</em>:</label>
                <input type="number" min="1" step="0.01" name="poids_brut" id="poids_brut" class="form-control" value="{{ticket.poids_brut}}">
            </div>
            <div class="form-group col-md-6">
                <label for="heurepesee">Poids net <em>(en T)</em>:</label>
                <input type="number" min="1" step="0.01" name="poids_net" id="poids_net" class="form-control" value="{{ticket.poids_net}}">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="heurepesee">Montant <em>(en DA)</em>:</label>
                <input type="number" min="0" step="10" name="montant" id="montant" class="form-control" value="{{ticket.montant}}">
            </div>
            <div class="from-group col-md-6">
                <label>Image ticket:</label>
                <input name="image" type="file" id="fichier_a_uploader" class="form-control"/>
            </div>
        </div>
    </div>
    <div class="form-group" style="margin-top: 20px; margin-left: 5px;">
        <button type="submit" class="btn btn-primary" style="width: 200px; ">Sauvegarder</button>
    </div>
</form>


{% endblock %}