{% extends "base.html.twig" %}
{% block title %}Points de collecte {%endblock%}
{% block stylesheets %}
  <link rel="stylesheet" href="{{asset('css/table.css')}}">
  <style>
	body::-webkit-scrollbar{
		display: none;
	}
  </style>
{% endblock %}
{% block header %}Points de collecte{%endblock%}
{% block body %}
<div class="row">

	<form method="post" action="{{ path('parSecteur') }}" class="col md-9">
	<label for="secteur" style="float:left; margin-top:15px;">Choisir un secteur:</label>
	<select id="secteur" name="code" class="form-control col-md-3" style="float:left; margin-top:10px;">
		<option value="tout">Tout</option>
		<option value="C013-A11">C013-A11</option>
	</select>
		<button class="btn btn-outline-warning btn-sm" style="float:left; margin-top: 2%;" type="submit" value="filtrer"><i class="fas fa-filter"></i></button>
	</form>
	<div class="col md-4">
		<a class="btn btn-success btn-add btn-sm" href="{{path('addPoint')}}" value="add" type="submit"><i class="fas fa-plus"></i></a>
	</div>	
</div>

<div class="tableFixHead mt-4">
	<table class="table">
		<thead>
			<tr>
			<th scope="col">Code</th>
			<th scope="col">Libelle</th>
			<th scope="col">Adresse</th>
			<th scope="col">Mode </th>
			<th scope="col">Activit√©s</th>
			<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
		{% for point in points %}
			<tr>
				<td scope="row">{{ point.code_point }}</td>
				<td> {{ point.libelle }} </td>
				<td>{{ point.adresse }}</td>
				<td>{{ point.modecollecte }}</td>
				<td>{{ point.activites }}</td>
				<td>
					<div class="btn-group" style="display:flex">
						<a class="btn btn-sm btn-info" href="{{path('editPoint', {code:point.code_point})}}"><i class="fa fa-edit"></i></a>
						<a class="btn btn-sm btn-danger" href="{{path('deletePoint')}}"><i class="fas fa-trash-alt"></i></a>
					</div>
				</td>
			</tr>
		{% endfor %}
		</tbody>
  	</table>
</div>
{% endblock %}

{% block javascripts %}

{% endblock %}